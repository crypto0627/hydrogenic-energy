{
  "name": "hydrogenic-energy",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "jakelint": "^1.0.11",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false,
    "useTabs": false,
    "tabWidth": 2,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 80,
          "tabWidth": 2,
          "useTabs": false
        }
      }
    ]
  }
}
